<div class="jumbotron jumbotron-fluid bg-dark text-light p-5">
  <h1>Eat Burgers App!</h1>
</div>

<div class="container">
  <div class="row">
    {{!-- column for form --}}
    <div class="col-12 col-md-3">
      <form id="burger-form">
        <input class="form-control" id="name-input" placeholder="burger's Name" />
        <button class="btn btn-success btn-block" type="submit">
          Add A Burger to the List!
        </button>
      </form>
    </div>
    {{!-- end left column --}}
    {{!-- right column to display burgers--}}
    <div class="col-12 col-md-9">
      {{!-- make two columns in right column --}}
      <div class="row">
        {{!-- inner left column --}}
        <div class="col-12 col-md-6">
          <h2>Burgers On the Menu</h2>
          <ul class="list-group">
            {{!-- use handlebars to print burgers that aren't devoured --}}
            {{#each burgerData}}
            {{!-- this is the same as saying !== --}}
            {{#unless devoured}}
            <li class="list-group-item d-flex">
              {{name}}
              <span class="ml-auto">
                <button data-id="{{id}}" data-devoured="true" class="btn btn-sm btn-info update-burger">
                  Devour Burger!
                </button>

                {{!-- delete burger --}}
                <button data-id="{{id}}" class="btn btn-sm btn-danger delete-burger">
                  Remove Burger
                </button>
              </span>
            </li>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
        {{!-- end inner left --}}
        {{!-- inner right --}}
        <div class="col-12 col-md-6">
          <h2>Burgers You Have Devoured</h2>
          <ul class="list-group">
            {{!-- use handlebars to print burgers that aren't devoured --}}
            {{#each burgerData}}
            {{!-- this is the same as saying !== --}}
            {{#if devoured}}
            <li class="list-group-item d-flex">
              {{name}}
              <span class="ml-auto">
                {{!-- delete burger --}}
                <button data-id="{{id}}" class="btn btn-sm btn-danger delete-burger">
                  Hide My Shame!
                </button>
              </span>
            </li>
            {{/if}}
            {{/each}}
          </ul>
        </div>
        {{!-- end inner right --}}
      </div>
    </div>
  </div>
</div>

<script src="./assets/js/burgers.js"></script>